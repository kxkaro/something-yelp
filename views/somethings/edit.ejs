<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 class="tx-center">Edit <%=something.name%></h1>
		
		<div class="new-form">
			<form action="/somethings/<%=something._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="something[name]" value="<%= something.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="something[price]" value="<%= something.price %>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="something[image]"  value="<%= something.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="something[description]"  value="<%= something.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-default btn-block primary">Submit</button>
				</div>
			</form>
			
			<a href="/somethings/<%=something._id%>" name="backToSomethings">Go back</a>
		</div>
	</div>
</div>


<% include ../partials/footer %>