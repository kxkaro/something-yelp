<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 class="tx-center">Add a new comment to <%= something.name %></h1>
		
		<div class="new-form">
			<form action="/somethings/<%= something._id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="comment">
				</div>
				<div class="form-group">
					<button class="btn btn-default btn-block primary">Submit</button>
				</div>
			</form>
			
			<a href="/somethings/<%= something._id %>" name="backToSomethings">Go back</a>
		</div>
	</div>
</div>


<% include ../partials/footer %>